= simple_form_for(@service) do |f|
  = f.error_notification

  .form-inputs
    = f.input :car_id, collection: Car.order(:name) , label: 'Машина'
    = f.input :amount, label: 'Количество сервиса ТО'
    = f.input :season_sumer, label: 'Сезонное ТО лето'
    = f.input :season_winter, label: 'Сезонное ТО зима'
    = f.input :time_to, label: 'Время последнего ТО'

  .form-actions
    = f.submit class: ["btn btn-primary"]
