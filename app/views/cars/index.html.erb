<h1>Все машины</h1>

<table class="table table-bordered">
  <tr>
    <th>Наименование</th>
    <th>Объект подразделения</th>
    <th>Дата ввод в эксплуатацию</th>
    <th>Дата гарантированного срока</th>
    <th>Наименование страховой фирмы</th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.name %></td>
    <td><%= car.object_subdivisiod %></td>
    <td><%= car.date_of_commissioning %></td>
    <td><%= car.date_warranty %></td>
    <td><%= car.warranty.name %></td>
    <td>
    <nobr>
    <%= link_to 'Подробнее', car, :class => "btn btn-success btn-mini" %>
    <%= link_to 'Редактировать', edit_car_path(car), :class => "btn btn-info btn-mini" %>
    <%= link_to 'Удалить', car, method: :delete, data: { confirm: 'Вы уверены?' }, :class => "btn btn-danger btn-mini" %>
    </nobr>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Создать новую машину', new_car_path, :class => "btn" %>
