<h1>список всех выполненных работ</h1>

<table>
  <tr>
    <th>Наиминование машины</th>
    <th>На ремонте</th>
    <th>На тех обслуживании</th>
    <th>Километров выполнено</th>
    <th>Мото-часов выполнено</th>
    <th>Дата создания</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.car.name %></td>
    <td><%= job.repair_job ? 'да': 'нет' %> </td>
    <td><%= job.to ? 'да': 'нет'%></td>
    <td><%= job.km_n %></td>
    <td><%= job.m_ch %></td>
    <td><%= job.created_at.strftime("%Y-%m-%d ") %></td>
    <td><%= link_to 'Подробнее', job %></td>
    <td><%= link_to 'Редактировать', edit_job_path(job) %></td>
    <td><%= link_to 'Удалить', job, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
<% end %>
</table>

