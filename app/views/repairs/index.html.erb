<h1>Все отремонтированные </h1>

<table class="table table-bordered">
  <tr>
    <th>Причина</th>
    <th>Замена произошла</th>
    <th>Машинка</th>
    <th>Деталь</th>
    <th></th>
  </tr>

<% @repairs.each do |repair| %>
  <tr>
    <td><%= repair.cause %></td>
    <td><%= repair.replacement ? "да" : "нет" %>    </td>

    <td><%= repair.car.name %></td>
    <td><%= repair.detail.name_det %></td>
    <td><nobr><%= link_to 'Подробнее', repair, :class => "btn btn-success btn-mini" %>
    <%= link_to 'Редактировать', edit_repair_path(repair), :class => "btn btn-info btn-mini" %>
    <%= link_to 'Удалить', repair, method: :delete, data: { confirm: 'Вы уверены?' }, :class => "btn btn-danger btn-mini" %></nobr></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Новый ремонт', new_repair_path, :class => "btn" %>
