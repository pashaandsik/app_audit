<% @repairs.each do |repair| %>
  <tr>
    <td><%= repair.cause %></td>
    <td><%= repair.replacement %>    </td>

    <td><%= repair.car_id %></td>
    <td><%= repair.detail_id %></td>
    <td><%= link_to 'Подробнее', repair %></td>
    <td><%= link_to 'Редактировать', edit_repair_path(repair) %></td>
    <td><%= link_to 'Удалить', repair, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
<% end %>
</table>

